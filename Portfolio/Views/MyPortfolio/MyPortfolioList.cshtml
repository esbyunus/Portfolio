@model List<MyPortfolio>
@{
    ViewData["Title"] = "MyPortfolioList";
    Layout = "~/Views/Layout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Portfolio</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Portfolio Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Portfolio ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">AltBaşlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr> 
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.MyPortfolioId</td>
										<td>@item.Title</td>
										<td>@item.SubTitle</td>
										<td>@item.Description</td>
										<td><a href="/MyPortfolio/DeleteMyPortfolio/@item.MyPortfolioId" class="btn btn-danger">Sil</a></td>
										<td><a href="/MyPortfolio/UpdateMyPortfolio/@item.MyPortfolioId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/MyPortfolio/CreateMyPortfolio/" class="btn btn-primary">Yeni Hakkında</a>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>

