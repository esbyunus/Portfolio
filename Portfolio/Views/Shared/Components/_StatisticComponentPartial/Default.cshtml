<section id="stats" class="s-stats">
    <div class="row block-1-4 block-tab-1-2 block-mob-full stats">

        <div class="col-block stats__col ">
            <div class="stats__count">
                @ViewBag.v1
            </div>
            <h4>Yetenek</h4>
        </div>
        <div class="col-block stats__col">
            <div class="stats__count">
                @ViewBag.v3
            </div>
            <h4>Referans</h4>
        </div>
        <div class="col-block stats__col stats__col--highlight">
            <div class="stats__upsign">
                <a href="#works" class="smoothscroll"><i class="im im-arrow-up" aria-hidden="true"></i></a>
            </div>
            <div class="stats__count">
                @ViewBag.v2
            </div>
            <h4>Tamamlanan Proje Sayısı</h4>
        </div>
        <div class="col-block stats__col">
            <div class="stats__count">
                @ViewBag.v4
            </div>
            <h4>Deneyim</h4>
        </div>

    </div>
</section>