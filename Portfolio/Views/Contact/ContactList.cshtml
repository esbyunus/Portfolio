@model List<Contact>
@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kontakt</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Kontakt Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Kontakt ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Telefon 1</th>
									<th scope="col">Email 1</th>
									<th scope="col">Adres</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ContactId</td>
										<td>@item.Phone1</td>
										<td>@item.Email1</td>
										<td>@item.Address</td>
										<td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-danger">Sil</a></td>
										<td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Contact/CreateContact/" class="btn btn-primary">Yeni Kontakt</a>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>
