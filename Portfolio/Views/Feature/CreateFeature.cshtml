@model Feature
@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Views/Layout/Index.cshtml";
}

<h1>CreateFeature</h1>

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Öne Çıkan Alanlar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Öne Çıkan Alan Ekleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">
							<label>Başlık</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Açıklama</label>
							<textarea rows="10" class="form-control" asp-for="Description"></textarea>
							<br />
							<button class="btn btn-primary">Öne Çıkan Alanı Ekle</button>
						</form>

					</div>
				</div>
			</div>

		</div>
	</div>
</div>
